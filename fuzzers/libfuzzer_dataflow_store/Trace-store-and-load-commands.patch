diff --git a/compiler-rt/lib/fuzzer/FuzzerTracePC.cpp b/compiler-rt/lib/fuzzer/FuzzerTracePC.cpp
index f12f7aa61bc4..be01bc0c6510 100644
--- a/compiler-rt/lib/fuzzer/FuzzerTracePC.cpp
